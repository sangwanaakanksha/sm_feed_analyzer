{
    "manifest_version": 3,
    "name": "Twitter Timeline Tracker",
    "description": "Tracks tweets on your Twitter timeline.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  